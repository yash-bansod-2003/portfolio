---
interface Props {
    title: string;
    description: string;
    date: string;
    image: string;
    gitHub?: string;
    preview?: string;
}

const {title , description , image , date , gitHub , preview} = Astro.props;
---

<div class="card">
    <div class="card__header">
        <img src={image} alt="" />
    </div>

    <div class="card__content">
        <h3>{title}</h3>
        <p>
           {description}
        </p>
        <div>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                style="fill: currentColor;transform: ;msFilter:;"
            >
                <path
                    d="M21 20V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2h14c1.103 0 2-.897 2-2zM9 18H7v-2h2v2zm0-4H7v-2h2v2zm4 4h-2v-2h2v2zm0-4h-2v-2h2v2zm4 4h-2v-2h2v2zm0-4h-2v-2h2v2zm2-5H5V7h14v2z"
                >
                </path>
            </svg>
            <p>{date}</p>
        </div>
    </div>

    <div class="card__footer">
        <a class="btn" href={gitHub}>Git Hub</a>
        <a class="btn btn-outline" href={preview}>Live Preview</a>
    </div>
</div>

<style lang="scss">
    .card {
        width: 100%;
        border: 0.1rem solid var(--text);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .card__header {
        width: 100%;
        border: .1rem solid var(--text);
        
        img {
            width: 100%;
        }
    }

    .card__content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        border-bottom: 0.1rem solid var(--text);
        padding: 1rem 0;

        h3 {
            font-size: 2.4rem;
        }

        p {
            font-size: 1.8rem;
            line-height: 2.5rem;
        }

        div {
            display: flex;
            gap: 1.5rem;
        }
    }

    .card__footer {
        display: flex;
        justify-content: space-between;

        a {
            padding: 1.2rem 2.4rem;
        }
    }
</style>
