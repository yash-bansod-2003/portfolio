---
interface Props {
    Id: string;
    title: string;
    description: string;
    image : string;
}

const { Id, title, description , image} = Astro.props;
---

<div class="card">
    <div id={Id} class="card__header">
        <img src={image} alt={`${title}-image`} />
    </div>
    <div class="card__content">
        <h2>{title}</h2>
        <p>
            {description}
        </p>
    </div>
</div>

<style lang="scss">
    .card {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        padding: 1rem;
        border: 0.1rem solid var(--text);
    }

    .card__header {
        width: 100%;
        aspect-ratio: 16/9;
        overflow: hidden;
        display: flex;
        justify-content: center;
        
        img {
            width: 100%;
            transition: 0.5s all ease-in-out;
           
            &:hover {
                animation-play-state: paused;
                transform: scale(1.04);
            }
        }
    }

    .card__content {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        h2 {
            font-size: 2.4rem;
            text-align: center;

            // Laptop
            @media (769px <= width) {
                text-align: start;
            }
        }
        p {
            font-size: 1.8rem;
            line-height: 3rem;
            text-align: justify;
            color: var(--text-light);
        }
    }
</style>

