import ServiceCard from "@/components/cards/service.card.astro";
---

<section id="services">
    <div class="container service__container">
        <div class="service__intro">
            <h2>I can provide some services</h2>
            <p>
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Maiores
                error nostrum placeat totam provident voluptate exercitationem?
            </p>
        </div>

        <div class="service__card-container">
            <ServiceCard
                Id="backend__card"
                title="Backend Development"
                description="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et minus illo, quos expedita molestias nemo culpa nostrum. Expedita, error distinctio."
            />
            <ServiceCard
                Id="frontend__card"
                title="Frontend Development"
                description="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et minus illo, quos expedita molestias nemo culpa nostrum. Expedita, error distinctio."
            />
            <ServiceCard
                Id="app__card"
                title="Aplication Development"
                description="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et minus illo, quos expedita molestias nemo culpa nostrum. Expedita, error distinctio."
            />
        </div>
