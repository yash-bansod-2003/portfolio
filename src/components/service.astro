---
import ServiceCard from "@/components/cards/service.card.astro";
---

<section id="services">
    <div class="container service__container">
        <div class="service__intro">
            <h2>services</h2>
        </div>

        <div class="service__card-container">
            <ServiceCard
                Id="backend__card"
                title="Backend Development"
                description="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et minus illo, quos expedita molestias nemo culpa nostrum. Expedita, error distinctio."
                image="/frontend.webp"
            />
            <ServiceCard
                Id="frontend__card"
                title="Frontend Development"
                description="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et minus illo, quos expedita molestias nemo culpa nostrum. Expedita, error distinctio."
                image="/backend.webp"
            />
            <ServiceCard
                Id="app__card"
                title="Aplication Development"
                description="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et minus illo, quos expedita molestias nemo culpa nostrum. Expedita, error distinctio."
                image="/android.webp"
            />
        </div>
    </div>
</section>

<style lang="scss">
    #services {
        
        // Laptop
        @media (769px <= width) {
            height: 100vh;
            gap: 0;
        }
        padding: 4rem 0;
    }

    .service__container {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 3rem;

        // Laptop
        @media (769px <= width) {
            gap: 0;
        }
    }

    .service__intro {
        h2 {
            font-size: 4.8rem;
            position: relative;
            display: inline-block;

            &::before {
                content: "";
                position: absolute;
                left: 0;
                bottom: 0;
                height: 0.5rem;
                background-color: var(--text);
                animation: animate-title 3s ease-in-out infinite;
            }
        }

        p {
            font-size: 2.4rem;

            // Laptop
            @media (769px <= width) {
                text-align: left;
                max-width: 60vw;
            }
        }
    }

    @keyframes animate-title {
        0% {
            width: 2%;
        }
        50% {
            width: 80%;
        }
        100% {
            width: 2%;
        }
    }
    .service__card-container {
        display: grid;
        grid-template-rows: repeat(3, 1fr);
        grid-template-columns: repeat(1, 1fr);
        gap: 3rem;

        // Laptop
        @media (769px <= width) {
            grid-template-rows: repeat(1, 1fr);
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
