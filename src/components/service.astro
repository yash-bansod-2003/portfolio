<style lang="scss">
    #services {
        height: 100vh;
    }

    .service__container {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 3rem;

        // Laptop
        @media (769px <= width) {
            gap: 0;
        }
    }

    .service__intro {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 2rem;

        h2 {
            font-size: 4.8rem;
        }

        p {
            font-size: 2.4rem;

            // Laptop
            @media (769px <= width) {
                text-align: left;
                max-width: 60vw;
            }
        }
    }

    .service__card-container {
        display: grid;
        grid-template-rows: repeat(3, 1fr);
        grid-template-columns: repeat(1, 1fr);
        gap: 3rem;

        // Laptop
        @media (769px <= width) {
            grid-template-rows: repeat(1, 1fr);
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
